{
  "name": "@alphacifer/drizzle",
  "version": "0.0.4",
  "description": "Drizzle Setup Utils for Alpha's projects.",
  "bin": {
    "drizzle-cli": "./lib/cli.mjs"
  },
  "exports": {
    "./config": {
      "import": {
        "types": "./lib/config.d.mts",
        "default": "./lib/config.mjs"
      },
      "require": {
        "types": "./lib/config.d.cts",
        "default": "./lib/config.cjs"
      }
    },
    "./core": {
      "import": {
        "types": "./lib/core.d.mts",
        "default": "./lib/core.mjs"
      },
      "require": {
        "types": "./lib/core.d.cts",
        "default": "./lib/core.cjs"
      }
    },
    "./factory": {
      "import": {
        "types": "./lib/factory.d.mts",
        "default": "./lib/factory.mjs"
      },
      "require": {
        "types": "./lib/factory.d.cts",
        "default": "./lib/factory.cjs"
      }
    },
    "./parser": {
      "import": {
        "types": "./lib/parser.d.mts",
        "default": "./lib/parser.mjs"
      },
      "require": {
        "types": "./lib/parser.d.cts",
        "default": "./lib/parser.cjs"
      }
    },
    "./pg": {
      "import": {
        "types": "./lib/pg.d.mts",
        "default": "./lib/pg.mjs"
      },
      "require": {
        "types": "./lib/pg.d.cts",
        "default": "./lib/pg.cjs"
      }
    },
    "./testing": {
      "import": {
        "types": "./lib/testing.d.mts",
        "default": "./lib/testing.mjs"
      },
      "require": {
        "types": "./lib/testing.d.cts",
        "default": "./lib/testing.cjs"
      }
    }
  },
  "keywords": [
    "alpha",
    "dx",
    "drizzle"
  ],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "author": "Alpha",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zgid123/alpha-dx.git"
  },
  "license": "MIT",
  "scripts": {
    "prepublish": "pnpm build",
    "build": "tsdown"
  },
  "dependencies": {
    "@alphacifer/core-utils": "workspace:^",
    "commander": "^14.0.2",
    "drizzle-orm": "^0.45.1",
    "esbuild": "^0.27.2",
    "esbuild-register": "^3.6.0",
    "pg": "^8.16.3"
  },
  "devDependencies": {
    "@types/pg": "^8.16.0",
    "drizzle-kit": "^0.31.8"
  }
}
