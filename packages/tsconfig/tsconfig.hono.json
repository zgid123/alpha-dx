{
  "compilerOptions": {
    "baseUrl": "src",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "outDir": "dist",
    "paths": {
      "~/*": [
        "./*"
      ]
    },
    "skipLibCheck": true,
    "strict": true,
    "target": "ESNext",
    "types": [
      "node"
    ],
    "verbatimModuleSyntax": true
  },
  "exclude": [
    "**/node_modules/*",
  ]
}
