{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "outDir": "dist",
    "paths": {
      "~/*": [
        "./*"
      ]
    },
    "types": [
      "node"
    ],
    "useDefineForClassFields": true,
    "verbatimModuleSyntax": true
  },
  "exclude": [
    "**/node_modules/*"
  ]
}
