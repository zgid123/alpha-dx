{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "exactOptionalPropertyTypes": true,
    "jsx": "react-jsx",
    "moduleDetection": "force",
    "noUncheckedSideEffectImports": true,
    "paths": {
      "~/*": [
        "./*"
      ]
    },
    "sourceMap": true,
    "verbatimModuleSyntax": true
  }
}
