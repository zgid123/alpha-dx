{
  "name": "alpha-dx",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "prepare": "husky",
    "preinstall": "npx only-allow pnpm",
    "clear": "pnpm -r exec rimraf node_modules dist .turbo lib && pnpm rimraf node_modules .turbo",
    "test": "vitest run --coverage",
    "update-packages": "pnpm update -i -r --latest",
    "build": "turbo run build",
    "release": "pnpm build && changeset version && changeset publish"
  },
  "packageManager": "pnpm@10.2.1",
  "devDependencies": {
    "@alphacifer/biome": "workspace:^",
    "@alphacifer/tsconfig": "workspace:^",
    "@biomejs/biome": "^2.3.8",
    "@changesets/cli": "^2.29.8",
    "@vitest/coverage-istanbul": "^4.0.15",
    "changeset": "^0.2.6",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "rimraf": "^6.1.2",
    "tsdown": "0.17.0-beta.5",
    "turbo": "^2.6.1",
    "vitest": "^4.0.15"
  }
}
